@model Villia
@{
    ViewData["Title"] = "Delete Villa";
}
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa </h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <form asp-action="Delete" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" disabled class="form-control" />

            </div>
            <div class="form-group mb-3">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" disabled class="form-control" />

            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" disabled class="form-control"></textarea>

            </div>
            <div class="form-group mb-3">
                <label asp-for="PricePerNight" class="form-label"></label>
                <input asp-for="PricePerNight" disabled class="form-control" />

            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberOfBedrooms" class="form-label"></label>
                <input asp-for="NumberOfBedrooms" disabled class="form-control" />

            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberOfBathrooms" class="form-label"></label>
                <input asp-for="NumberOfBathrooms" disabled class="form-control" />

            </div>
            <div class="form-group mb-3 form-check">
                <label asp-for="HasSwimmingPool" class="form-label "></label>
                <input asp-for="HasSwimmingPool" disabled class="form-check" />

            </div>
            <button type="submit" class="btn btn-success ">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

    </div>

</div>
